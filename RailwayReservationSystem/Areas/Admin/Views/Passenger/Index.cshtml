@model List<Passenger>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Passengers List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Passenger" asp-action="Create" class="btn btn-primary"><i class="far fa-plus-square"></i>&nbsp; Create New</a>
        </div>
    </div>
    <table class="table table-bordered table-striped mt-4">
        <thead class="thead-dark">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    CNIC
                </th>
                <th>
                    Gender
                </th>
                <th>
                    DOB
                </th>
                <th>
                    Age
                </th>
                <th>
                    Email
                </th>
                <th>
                    Phone No.
                </th>
                <th>
                    Edit/Delete
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.CNIC
                    </td>
                    <td>
                        @obj.Gender
                    </td>
                    <td>
                        @obj.DOB.ToShortDateString()
                    </td>
                    <td>
                        @obj.Age
                    </td>
                    <td>
                        @obj.Email
                    </td>
                    <td>
                        @obj.PhoneNo
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Passenger" asp-action="Update" asp-route-id="@obj.PassengerId" class="btn btn-primary mx-2"><i class="fas fa-edit"></i></a>
                            <a asp-controller="Passenger" asp-action="Delete" asp-route-id="@obj.PassengerId" class="btn btn-danger mx-2"><i class="fas fa-trash-alt"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>