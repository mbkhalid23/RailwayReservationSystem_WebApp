@model Train
@{
    var station = Model.Station.Name + ", " + Model.Station.City; 
}

<form method="post" class="container w-50 py-4">
    <div class="border rounded-4 p-3">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Train</h2>
            <hr />
        </div>
        <input hidden asp-for="TrainNo" />
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input disabled asp-for="Name" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Capacity"></label>
            <input disabled asp-for="Capacity" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Station</label>
            <input disabled type="text" value="@station" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Status">Status</label>
            <input disabled asp-for="Status" class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Train" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>