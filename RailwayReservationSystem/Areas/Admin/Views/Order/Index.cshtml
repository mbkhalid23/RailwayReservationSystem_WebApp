@model List<OrderHeader>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Reservations</h2>
        </div>
    </div>
    <table class="table table-striped mt-4">
        <thead class="bg-info">
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Phone Number
                </th>
                <th>
                    Email
                </th>
                <th>
                    OrderStatus
                </th>
                <th>
                    OrderTotal
                </th>
                <th class="col-2">
                    Details
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orderHeader in Model)
            {
                <tr>
                    <td>
                        @orderHeader.Id
                    </td>
                    <td>
                        @orderHeader.Name
                    </td>
                    <td>
                        @orderHeader.PhoneNumber
                    </td>
                    <td>
                        @orderHeader.ApplicationUser.Email
                    </td>
                    <td>
                        @orderHeader.OrderStatus
                    </td>
                    <td>
                        @orderHeader.OrderTotal
                    </td>
                    <td>
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Order" asp-action="Details" asp-route-id="@orderHeader.Id" class="btn btn-success"><i class="fas fa-eye"></i> Details</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>